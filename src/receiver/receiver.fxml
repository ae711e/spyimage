<GridPane alignment="center" gridLinesVisible="true" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="receiver.Controller">
   <children>
      <ImageView fx:id="f_image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="btn_save" minWidth="-Infinity" mnemonicParsing="false" onAction="#onclick_btn_save" text="сохранить" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
      <Button fx:id="btn_send" minWidth="-Infinity" mnemonicParsing="false" text="отправить" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

      <TextField fx:id="txt_receiver" promptText="адрес получателя" GridPane.rowIndex="1" />
      <ComboBox fx:id="cmb_users" prefWidth="200.0" GridPane.rowIndex="2" />
      <Button fx:id="btn_account" mnemonicParsing="false" onAction="#onclick_btn_account" text="account" GridPane.rowIndex="3" />
      <TextArea fx:id="txt_spisok" prefHeight="200.0" prefWidth="200.0" promptText="список писем" GridPane.rowIndex="4" />
      <Button fx:id="btn_readlist" mnemonicParsing="false" onAction="#onclick_btn_readlist" text="список писем" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="btn_mykeys" mnemonicParsing="false" onAction="#onclick_btn_mykeys" text="ключи" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
