<GridPane alignment="BASELINE_CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="receiver.Controller">
   <children>
       <TableView fx:id="tbl_table" prefHeight="300.0" prefWidth="600.0" GridPane.rowIndex="2">
           <placeholder>
               <Label text="Требуется опрос сервера" textFill="#b5bc4e" />
           </placeholder>
           <columns>
               <TableColumn fx:id="col_mind" prefWidth="50" style="-fx-alignment: center;" text="№" />
               <TableColumn fx:id="col_datt" prefWidth="140" style="-fx-alignment: center-right;" text="дата" />
               <TableColumn fx:id="col_from" prefWidth="180" style="-fx-alignment: center-right;" text="от кого" />
               <TableColumn fx:id="col_fnam" prefWidth="180" style="-fx-alignment: center-right;" text="файл" />
           </columns>
         <GridPane.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
       </TableView>
       <Button fx:id="btn_readlist" mnemonicParsing="false" onAction="#onclick_btn_readlist" text="опрос сервера" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets right="2.0" />
         </GridPane.margin></Button>
       <ImageView fx:id="f_image" fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </GridPane.margin></ImageView>
      <Button fx:id="btn_save" minWidth="-Infinity" mnemonicParsing="false" onAction="#onclick_btn_save" text="сохранить" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
      <HBox alignment="CENTER" fillHeight="false" spacing="40.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="5">
         <children>
            <Button fx:id="btn_account" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onclick_btn_account" text="account" />
            <Button fx:id="btn_keys" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onclick_btn_keys" text="ключи" />
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
      <Button fx:id="btn_loadimg" mnemonicParsing="false" onAction="#onclick_btn_loadimg" text="загрузить изображение" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
      <Label fx:id="lbl_email" text="Label" textFill="#308a5d" GridPane.rowIndex="1" />
      <TextArea fx:id="txt_output" editable="false" minHeight="-Infinity" prefHeight="100.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
         <font>
            <Font size="12.0" />
         </font>
      </TextArea>
   </children>

</GridPane>
