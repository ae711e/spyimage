<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="keygenmy.Controller">
    <children>
      <Label text="Генерация собственного ключа шифрования" textFill="#3d0985" GridPane.columnIndex="1">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font></Label>
      <TextField fx:id="txt_user" editable="false" promptText="собственный e-mail" GridPane.columnIndex="2" />
      <ComboBox fx:id="cb_users" minWidth="-Infinity" prefWidth="320.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btn_deleteusr" mnemonicParsing="false" onAction="#onclickBtnDeleteusr" text="удалить" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Button fx:id="btn_keygen" mnemonicParsing="false" onAction="#onclickBtnKeygen" text="генерировать собственные  ключи" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Label text="публичный ключ" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="приватный ключ" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="btn_close" defaultButton="true" mnemonicParsing="false" onAction="#onclick_btn_close" text="Закрыть" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <TextArea fx:id="ta_publicKey" prefHeight="200.0" prefWidth="320.0" promptText="публичный ключ" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextArea fx:id="ta_privateKey" editable="false" prefHeight="200.0" prefWidth="320.0" promptText="приватный ключ" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
